


  <section class="products-grid">
    <div class="container-fluid">

        {{ include('_flash_messages.html.twig')}}

      <header class="product-grid-header d-flex align-items-center justify-content-between">
        <div class="mr-3 mb-3">
          Affichage <strong>1-{{products|length}} </strong>de <strong>{{products|length}} </strong>résultats
        </div>
        <div class="mr-3 mb-3"><span class="mr-2">Voir</span><a href="#" class="product-grid-header-show active">{{products|length}} </a><a
            href="#" class="product-grid-header-show ">{{products|length}} </a><a href="#" class="product-grid-header-show ">Tout </a>
        </div>

        <div class="mb-3 d-flex align-items-center"><span class="d-inline-block mr-1">Trier par</span>
        <form action="" method="get">
          <select name="tri" class="custom-select w-auto border-0">
            <option value="notSorted" {% if  app.request.query.get('tri') is not defined %}selected{% endif %}>Défaut</option>
            <option value="name" {% if  app.request.query.get('tri') == 'name' %}selected{% endif %}>Nom</option>
            <option value="rate" {% if  app.request.query.get('tri') == 'rate' %}selected{% endif %}>Note</option>
            <option value="price" {% if  app.request.query.get('tri') == 'price' %}selected{% endif %}>Prix</option>
          </select>
          <button class="btn btn-outline-primary" type="submit">Valider</button>
          </form>
        </div>  
      </header>
      <div class="row">
          <!-- product-->
          {% for product in products %}
            
        <div class="product col-xl-3 col-lg-4 col-sm-6">
          <div class="product-image">
            <a href="{{path('app_main_product', {slug : product.slug})}}" class="product-hover-overlay-link">
              <img src="{{ asset(product.picture) }}" alt="product" class="img-fluid">
            </a>
          </div>
          <div class="product-action-buttons">
            <form action="{{path('app_panier_add', {id : product.id} )}}" method="POST">
              <button class="btn btn-outline-dark btn-product-left"><i class="fa fa-shopping-cart"></i></button>
            </form>
              <a href="{{path('app_main_product', {slug : product.slug})}}" class="btn btn-dark btn-buy mt-2"><i class="fa-search fa"></i><span class="btn-buy-label ml-2">Voir</span></a>
          </div>
          <div class="py-2">
            <p class="text-muted text-sm mb-1">{{product.type.name}}</p>
            <h3 class="h6 text-uppercase mb-1"><a href="{{path('app_main_product', {slug : product.slug})}}" class="text-dark">{{product.name}}</a></h3><span class="text-muted">{{product.price}}€</span>
          </div>
        </div>
        {% endfor %}

      </div>
      
    </div>
  </section>


